<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        style="@style/costumBgTheme2">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C1000 Vitamin Lemon"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/pink_950" />

        <TextView
            android:id="@+id/tvProductGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade: D"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/pink_950" />

        <TextView
            android:id="@+id/tvProductSugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugar: 16g"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/pink_950" />

        <TextView
            android:id="@+id/tvProductServing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serving Size: 140ml"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/pink_950" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
